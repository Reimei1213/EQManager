<p id="notice"><%= notice %></p>

<h1>Equips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Group</th>
      <th>Classification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equips.each do |equip| %>
      <tr>
        <td><%= equip.name %></td>
        <td><%= equip.state %></td>
        <td><%= equip.group_id %></td>
        <td><%= equip.classification_id %></td>
        <td><%= link_to 'Show', equip %></td>
        <td><%= link_to 'Edit', edit_equip_path(equip) %></td>
        <td><%= link_to 'Destroy', equip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

